                    {%- endif -%}

                    {%- if section.settings.content2 != blank -%}
                      {{- section.settings.content2 -}}
                    {%- endif -%}
                    </div>
                  </div>
                  <div class="grid-item middle">
                    <div class="SL-content-wrapper extra-space middle-content">
                    {%- if section.settings.title3 != blank -%}
                      <p class="p" style="font-weight: 600">{{ section.settings.title3 | escape }} </p>
                    {%- endif -%}

                    {%- if section.settings.content3 != blank -%}
                      {{- section.settings.content3 -}}
                    {%- endif -%}
                    </div>
                  </div>
                  <div class="grid-item right">
                    <div class="SL-content-wrapper extra-space right-content">
                    {%- if section.settings.title4 != blank -%}
                      <p class="p" style="font-weight: 600">{{ section.settings.title4 | escape }} </p>
                    {%- endif -%}

                    {%- if section.settings.content4 != blank -%}
                      {{- section.settings.content4 -}}
                    {%- endif -%}
                    </div>
                  </div>
                  <div class="grid-item right">
                    <div class="SL-content-wrapper extra-space right-content">
                    {%- if section.settings.title5 != blank -%}
                      <p class="p" style="font-weight: 600">{{ section.settings.title5 | escape }} </p>
                    {%- endif -%}

                    {%- if section.settings.content5 != blank -%}
                      {{- section.settings.content5 -}}
                    {%- endif -%}
                    </div>
                  </div>

                  {%- if section.settings.content1 == blank -%}
                    <style>
                      #shopify-section-template--19521757708626__ms_skincare_lovers_nN63n8 {
                        display: none;
                      }
                    </style>
                  {%- endif -%}
                  
                </div>
       
           </div>
         </div>
      </div>
    </div>
  </div>
</section>


