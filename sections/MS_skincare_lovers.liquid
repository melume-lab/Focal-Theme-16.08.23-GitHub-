            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <h3 class="heading h2">{{ section.settings.title | escape }}</h3>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
    </div>

        <div class="overall-grid-container">
           <div {% if is_boxed %}class="container"{% endif %}>
            <div class="section__color-wrapper {% if is_boxed %}section__color-wrapper--boxed{% endif %}">
              <div class="{% unless is_boxed %}container{% endunless %} {% unless blends_with_background %}vertical-breather{% endunless %}">
                <div class="grid-container">
                  
                  <div class="grid-item left">
                    <div class="SL-content-wrapper left-content">
                    {%- if section.settings.title1 != blank -%}
                      <p class="p" style="font-weight: 600">{{ section.settings.title1 | escape }} </p>
                    {%- endif -%}

                    {%- if section.settings.content1 != blank -%}
                      {{- section.settings.content1 -}}
                    {%- endif -%}
                    </div>
                  </div>
                  <div class="grid-item middle">
                    <div class="SL-content-wrapper extra-space middle-content">
                    {%- if section.settings.title2 != blank -%}
