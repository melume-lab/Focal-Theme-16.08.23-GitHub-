        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MS Image Tiles Right",
      "settings": {},
      "blocks": [
        {
          "type": "item"
        }
      ]
    }
  ]
