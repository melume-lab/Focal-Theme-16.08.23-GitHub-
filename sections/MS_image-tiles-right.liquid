{%- if section.settings.background_type == 'boxed' -%}
  {%- assign is_boxed = true -%}
{%- else -%}
  {%- assign is_boxed = false -%}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
      {%- assign heading_color = settings.heading_color -%}
      {%- assign text_color = settings.text_color -%}
    {%- else -%}
      {%- assign heading_color = section.settings.text_color -%}
      {%- assign text_color = section.settings.text_color -%}
    {%- endif -%}

    {%- if section.settings.button_background == 'rgba(0,0,0,0)' -%}
      {%- assign button_background = settings.primary_button_background -%}
    {%- else -%}
      {%- assign button_background = section.settings.button_background -%}
    {%- endif -%}

    {%- if section.settings.button_text_color == 'rgba(0,0,0,0)' -%}
      {%- assign button_text_color = settings.primary_button_text_color -%}
    {%- else -%}
      {%- assign button_text_color = section.settings.button_text_color -%}
    {%- endif -%}

    --heading-color: {{ heading_color.red }}, {{ heading_color.green }}, {{ heading_color.blue }};
    --text-color: {{ text_color.red }}, {{ text_color.green }}, {{ text_color.blue }};
    --primary-button-background: {{ button_background.red }}, {{ button_background.green }}, {{ button_background.blue }};
    --primary-button-text-color: {{ button_text_color.red }}, {{ button_text_color.green }}, {{ button_text_color.blue }};

    --section-accent-background: {{ section.settings.accent_background.red }} {{ section.settings.accent_background.green }} {{ section.settings.accent_background.blue }} / {{ section.settings.accent_background.alpha }};
    --section-autoplay-duration: {{ section.settings.cycle_speed }}s;
    --section-animation-play-state: paused;
  }

  
  
  .split-container {
    display: flex;
    width: 100%;
    height: auto;
  }
  .image-container, image-tiles-text-main-container-right {
    min-width: 50%;
    max-width: 50%;
    overflow: hidden;
    height: auto;
  }
  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
@media screen and (max-width: 1680px) {
  .image-tiles-text-main-container-right {
    display: block;
    max-width: calc(var(--container-max-width) - 49%);
  }
}

  @media screen and (min-width: 1681px) {
  .image-tiles-text-main-container-right {
    display: block;
    max-width: 760px;
  }
}
  .image-tiles-text-container-left {
    width: 100%;
    
  }

  @media screen and (min-width: 999px) {
  .image-tiles-text-container-left {
    margin-left: calc(var(--grid-column-width) + var(--grid-gap));
  }
}
  .image-tiles-text-main-container-right {
    margin-right: 48px;
    margin-left: auto;
    margin-top: 48px;
    margin-bottom: 48px;
    padding-left: var(--container-gutter);
    display: flex;
    align-items: center;
    justify-content: center;
    height: auto;
  }

  @media screen and (max-width: 999px) {
    .split-container {
    display: grid;
    width: 100%;
    height: auto;
    }
    .image-container, image-tiles-text-main-container-right {
    min-width: 100%;
    max-width: 100%;
    overflow: hidden;
    height: auto;
    
    }
    .image-tiles-text-main-container-right {
    margin-right: calc(var(--grid-column-width) + var(--grid-gap));
    margin-left: calc(var(--grid-column-width) + var(--grid-gap));
    margin-bottom: 88px;
    padding-left: var(--container-gutter);
    padding-right: var(--container-gutter);
    display: flex;
    align-items: center;
    justify-content: center;
    height: auto;
   }
  }

  @media screen and (max-width: 740px) {
    .split-container {
    display: grid;
    width: 100%;
    height: auto;
    }
    .image-container, image-tiles-text-main-container-right {
    min-width: 100%;
    max-width: 100%;
    overflow: hidden;
    height: auto;
    
    }
    .image-tiles-text-main-container-right {
    margin-right: 0px;
    margin-left: 0px;
    margin-bottom: 68px;
    padding-left: var(--container-gutter);
    padding-right: var(--container-gutter);
    display: flex;
    align-items: center;
    justify-content: center;
    height: auto;
   }
  }

    @media screen and (max-width: 999px) {
    .image-container {
      order: -1;
    }
  }

</style>

<section class="section">
  <div {% if is_boxed %}class="container"{% endif %}>
    {%- assign first_block = section.blocks.first -%}
    <div class="split-container">
      
      <div class="image-tiles-text-main-container-right">
        <div class="image-tiles-text-container-left">
        {%- if section.settings.title != blank -%}
              <h3 class="heading h2">
                {{ section.settings.title | escape }}
              </h3>
            {%- endif -%}


            {%- if section.settings.content != blank or section.settings.button_text != blank -%}
              <div class="image-overlay__text-container">
                {%- if section.settings.content != blank-%}
                  {{- section.settings.content -}}
                {%- endif -%}

                {%- if section.settings.html != blank -%}
                  <div class="html image-overlay__text-container">
                    {{- section.settings.html -}}
                  </div>
                {%- endif -%}

                {%- if section.settings.button_text != blank -%}
                  {%- if section.settings.link_style == 'link' -%}
                    <a href="{{ section.settings.button_link }}" class="multi-column__link heading heading--small link">{{ section.settings.button_text | escape }}</a>
                  {%- else -%}
                    <div class="button-wrapper">
                      <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_text | escape }}</a>
                    </div>
                  {%- endif -%}
                {%- endif -%}
              </div>
            {%- endif -%}
         </div>
      </div>
      <div class="image-container">
          {% if section.settings.image %}
          {% assign image_url = section.settings.image | img_url: 'master' %}
          {% assign image_width = 1000 %}
          {% assign image_height = 1000 %}
          <img src="{{ image_url }}" alt="Image" width="{{ image_width }}" height="{{ image_height }}">
        {% else %}
          <p>No image selected</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>

